{
  "hooks": {},
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "writerOpts": {
        "groupBy": "type"
      }
    }
  },
  "git": {
    "requireCleanWorkingDir": true,
    "requireBranch": false,
    "requireUpstream": false,
    "requireCommits": false,
    "addUntrackedFiles": false,
    "commit": true,
    "tag": true,
    "push": true
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "tokenRef": "GH_TOKEN"
  },
  "gitlab": {
    "release": false
  }
}
